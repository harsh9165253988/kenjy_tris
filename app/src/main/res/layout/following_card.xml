<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/followingcard"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="12dp"
    android:layout_marginEnd="12dp"
    android:layout_marginHorizontal="10dp"
    android:layout_marginVertical="10dp"
    app:cardCornerRadius="20dp"
    app:cardElevation="8dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/profImage"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginStart="30dp"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="10dp"
            android:scaleType="centerCrop"
            android:src="@drawable/profileimg"
            app:shapeAppearanceOverlay="@style/roundedImageViewRounded"/>

        <TextView
            android:id="@+id/orgName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginTop="15dp"
            android:layout_toEndOf="@id/profImage"
            android:text="Name"
            android:textColor="@color/lavender"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/orgLocation"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_below="@id/orgName"
            android:layout_marginStart="120dp"
            android:layout_marginTop="4dp"
            android:text="Location"
            android:textAlignment="center"
            android:textColor="@color/lavender"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/textEmail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/orgLocation"
            android:layout_marginTop="8dp"
            android:layout_marginStart="30dp"
            android:text="Email:" />

        <TextView
            android:id="@+id/orgEmail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/orgLocation"
            android:layout_marginTop="8dp"
            android:layout_marginStart="90dp"
            android:text="example@example.com"
            android:textColor="@color/lavender"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/textContact"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/orgEmail"
            android:layout_marginTop="4dp"
            android:layout_marginStart="30dp"
            android:text="Contact:" />

        <TextView
            android:id="@+id/orgContact"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/orgEmail"
            android:layout_marginTop="6dp"
            android:layout_marginStart="90dp"
            android:text="+123456789"
            android:textColor="@color/lavender"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/textMission"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/orgContact"
            android:layout_marginTop="4dp"
            android:layout_marginStart="30dp"
            android:text="Mission:" />

        <TextView
            android:id="@+id/orgMission"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/orgContact"
            android:layout_marginTop="4dp"
            android:layout_marginStart="90dp"
            android:text="Our mission statement goes here."
            android:textColor="@color/lavender"
            android:textSize="14sp"
            android:layout_marginBottom="30dp"/>



    </RelativeLayout>
</androidx.cardview.widget.CardView>
